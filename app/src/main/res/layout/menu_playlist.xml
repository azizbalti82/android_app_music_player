<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/bottomSheetMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        >
        <!-- header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_margin="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/playlist2"
                app:tint="@color/background3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="playlist"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    />
                <TextView
                    android:id="@+id/count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 songs"
                    android:textSize="14sp"
                    android:textColor="@color/text2"
                    />



            </LinearLayout>
        </LinearLayout>

        <!-- line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/selectedButton"/>

        <LinearLayout
            android:id="@+id/containerPlayall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/play"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"

                android:text="Play all"
                android:textColor="@color/text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerPlaynext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/redo"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Play next"
                android:textColor="@color/text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerAddQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/add_queue"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Add to playing queue"
                android:textColor="@color/text"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/selectedButton"/>
        <LinearLayout
            android:id="@+id/containerRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/edit"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Rename"
                android:textColor="@color/text"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/containerEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/edit_playlist"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Edit"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:layout_weight="1"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/background_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Available Soon"
                    android:textSize="11sp"
                    android:textColor="@color/text"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/containerSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/save_as"
                app:tint="@color/text3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Save as file"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:layout_weight="1"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/background_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Available Soon"
                    android:textSize="11sp"
                    android:textColor="@color/text"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!-- line -->
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/selectedButton"/>
        <LinearLayout
            android:id="@+id/containerDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_item_selected"
            android:paddingVertical="3dp"
            android:paddingStart="10dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete"
                app:tint="@color/text_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:text="Delete"
                android:textColor="@color/text_red"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/selectedButton"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>