<?xml version="1.0" encoding="utf-8"?>

<!-- i used nested scroll view cause i finded it better and let buggy -->
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bottomSheetMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        >
        <!-- header -->
        <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add to playlist"
            android:padding="15dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_gravity="center_vertical"
            />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/add_playlist"
            android:layout_gravity="center_vertical"
            app:tint="@color/text2" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/recyclerViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group3"
            android:layout_marginTop="5dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlaylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="40dp"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

