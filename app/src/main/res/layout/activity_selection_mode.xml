<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapters.selectionMode">

    <LinearLayout
        android:id="@+id/taskbarSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="7dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/close_button_selected"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/clear"
            android:background="@drawable/buttons_effect"
            app:tint="@color/text"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/title_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="0 selected"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/text"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/selectAll_button_selected"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="3dp"
            android:background="@drawable/buttons_effect"
            android:src="@drawable/select_all"
            app:tint="@color/text"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/more_button_selected"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="3dp"
            android:background="@drawable/buttons_effect"
            android:src="@drawable/more"
            app:tint="@color/text"
            android:textSize="20sp" />



    </LinearLayout>

    <!-- songs -->
    <LinearLayout
        android:id="@+id/recyclerViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskbarSelected"
        android:layout_marginTop="10dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSongs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@color/accent"
            android:paddingBottom="80dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>