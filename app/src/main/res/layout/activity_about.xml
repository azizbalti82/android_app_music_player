<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".more.moreActivity">

        <LinearLayout
            android:id="@+id/taskbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/cancel_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="19sp"
                android:background="@drawable/buttons_effect"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="About"
                android:textSize="20sp" />

        </LinearLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/taskbar"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/playlist"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed and Designed by"
                android:gravity="center"
                android:textColor="@color/text2"
                android:textSize="14sp"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aziz Balti"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/text11"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"

                app:layout_constraintTop_toBottomOf="@+id/text12"
            >
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/linkedin"
                    app:tint="@color/text2"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/github"
                    app:tint="@color/text2" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:src="@drawable/email"
                    app:tint="@color/text2" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/developer"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/playlist"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/text21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="support"
                android:gravity="start"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:padding="10dp"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="Donate 💙"
                android:textColor="@color/text"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text21"
                tools:layout_editor_absoluteX="10dp" />

            <TextView
                android:id="@+id/text23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="Change Log"
                android:textColor="@color/text"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text22"
                tools:layout_editor_absoluteX="10dp" />

            <TextView
                android:id="@+id/text24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="Report Bugs"
                android:textColor="@color/text"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text23"
                tools:layout_editor_absoluteX="10dp" />

            <TextView
                android:id="@+id/text25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="Open Source Licences"
                android:textColor="@color/text"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text24"
                tools:layout_editor_absoluteX="10dp" />

            <TextView
                android:id="@+id/text26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="FAQ"
                android:textColor="@color/text"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text25"
                tools:layout_editor_absoluteX="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/playlist"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/support"
            tools:layout_editor_absoluteX="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="Balti Player"
                    android:textColor="@color/text"
                    android:textSize="16sp"

                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="1.0"
                    android:textColor="@color/text2"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/text31" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center|start"
                    android:orientation="horizontal"

                    app:layout_constraintTop_toBottomOf="@+id/text32">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/web"
                        app:tint="@color/text2" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/github"
                        app:tint="@color/text2" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@null"
                        android:src="@drawable/email"
                        app:tint="@color/text2" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/bottomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Made with ♥️ from Tunisia"
            android:textColor="@color/text2"
            android:textSize="14sp"

            android:padding="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>