<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_song.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background"
    android:gravity="center_horizontal"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyrics"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:id="@+id/lyrics_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lyrics_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="No lyrics found"
                android:padding="5dp"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/text2"
                android:textSize="16sp"
                />

        </ScrollView>

        <LinearLayout
            android:id="@+id/lyrics_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="38dp"

                android:layout_marginEnd="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttons_triangle_shape10"
                android:backgroundTint="@color/text"
                android:text="search"
                android:textColor="@color/background"
                app:backgroundTint="@null"
                app:icon="@drawable/web2"
                app:iconGravity="textStart"
                app:iconTint="@color/background" />

            <Button
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"

                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttons_triangle_shape20"
                android:text="edit"
                android:textColor="@color/text"

                app:backgroundTint="@null"
                app:icon="@drawable/edit"
                app:iconTint="@color/text" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/art"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/songs_art_background"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/round_corners_art" />
</androidx.constraintlayout.widget.ConstraintLayout>